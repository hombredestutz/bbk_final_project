<% end %>

<div class="row">
  <div class="large-4 columns">
    <h1 id= "logo-font"><%= link_to "Black Tie", root_path %></a></h1>
  </div>
  <div class="large-8 columns">
    <ul class="right button-group">
      <li><a href="#" class="button">About Us</a></li>
      <li><a href="users/new" class="button">Sign Up</a></li>
      <li><a href="#" class="button" data-reveal-id="myModal">Log In</a></li>
        <div id="myModal" class="reveal-modal tiny" data-reveal>
          <%= form_tag sessions_path do %>
            <div>
              <%= label_tag "email" %><br/>
              <%= text_field_tag "email" %>
            </div>
            <div>
              <%= label_tag :password %><br/>
              <%= password_field_tag :password %>
            </div>
            <div><%= submit_tag "Log In" %></div>
          <% end %>
          <a class="close-reveal-modal">&#215;</a>
        </div>
    </ul>
  </div>
</div>
  
