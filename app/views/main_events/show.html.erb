<div class="row">
  <div class="large-2 columns"><%= button_to "Edit Event", edit_main_event_path(@main_event), class: "button", :method => "get" %></div>
  <div class="large-10 columns">
    <h1> <%= @main_event.title   %>! </h1> 
    <p><%= link_to "Create a SubEvent!", new_main_event_sub_event_path(@main_event) %></p>
  </div>
</div>

<div class="row">
  <div class="large-9 columns">
    <% @sub_events.each do |sub_event| %>
      <div class="row">
        <div class="large-3 columns">
          <h5><%= sub_event.date.to_s(:long) %></h5>
          <h5><%= sub_event.start_time.to_s(:time) %> </h5>
        </div>
        <div class="large-9 columns">  
          <h2><%= link_to sub_event.title, main_event_sub_event_path(@main_event, sub_event) %></h2>
        </div>
        <hr/>
      </div>
    <% end %>
  </div>

  <div class="large-3 columns">
    <%= button_to "Guest List", main_event_guests_path(@main_event), class: "button", :method => "get" %>
    <%= button_to "RSVP's", main_event_rsvps_path(@main_event), class: "button", :method => "get" %>
  </div>
</div>
