
<%= form_for [@main_event, @sub_event] do |f| %>
  <div>
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </div>
  <div>
    <%= f.label "Location" %><br>
    <%= f.text_field "location" %>
  </div>
  <div>
    <%= f.label "description" %><br>
    <%= f.text_field "description" %>
  </div>
  <div>
    <%= f.label "date" %><br>
    <%= f.date_select :date, order: [:day, :month, :year], selected: Date.today %>
  <div>
  <div>
    <%= f.label "start_time" %><br>
    <%= f.time_field "start_time" %>
  </div>
  <div>
    <%= f.label "end_time" %><br>
    <%= f.time_field "end_time" %>
  </div>
  
  <div>
    <%= f.label "Attire" %><br>
    <%= f.text_field "attire" %>
  </div>
  
  <div><%= f.submit "Submit", class: 'button' %></div>
<% end %>

